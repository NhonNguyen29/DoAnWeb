
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Giohang</h2>
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã Sản Phẩm </td>
        <td> Tên Sản Phảm </td>
        <td> Ảnh Sản Phảm </td>
        <td> Số lượng </td>
        <td> Giá Bán </td>
        <td> Thành tiền </td>
        <td width="70"> </td>
        <td width="70"> </td>
        <td width="70"> </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMaSP </td>
            <td> @item.sTenSanPham</td>
            <td><img src="~/images/@item.sAnhbia" width="70%"></td>

            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { id = item.iMaSP }))
            {
                <td><input type="number" min="1" value="@item.iSoluong" name="txtSoluong" style="background-color:silver; width:1" /> </td>

                <td>@String.Format("{0:0,0}", item.dGiaban) </td>
                <td>@String.Format("{0:0,0}", item.dThanhtien) </td>
                <td><a href="@Url.Action("ChiTietSanPham", "WebPhuKien", new { id = item.iMaSP })">  Chi tiết </td>
                <td><a href="@Url.Action("Xoagiohang", "Giohang", new { id = item.iMaSP })">  Xóa </td>
                <td> <input type="submit" value="Cập nhật" /> </td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align: center; color: red">
        <td colspan="5"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
        <td colspan="4"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; text-align: center; color: red">
        <td colspan="9"> <a href="@Url.Action("Xoatatcagiohang","Giohang")">  Xóa tất cả giỏ hàng </td>
    </tr>
    <tr style="font-weight: bold; text-align: center; color: red">
        <td colspan="9"><a href="@Url.Action("Dathang","Giohang")">  ĐẶT HÀNG </td>
    </tr>
</table>
