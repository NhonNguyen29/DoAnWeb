@model IEnumerable<Webphukien.Models.SANPHAM>
@{
    ViewBag.Title = "SanPhamTheoPhuKien";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 style="text-align:center; color:red"> Các Sản Phẩm của Phụ Kiện </h3>
<div class="row">
    @foreach (var sppk in Model)
    {

        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Chitietsanpham", "WebPhuKien", new { id = sppk.MaSP})">
                    <img alt="@sppk.TenSP" src="~/images/@sppk.Anhbia" width="200" />
                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @sppk.TenSP
                        </h4>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 Nhận xét</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
            </div>
        </div>
    }
</div>







