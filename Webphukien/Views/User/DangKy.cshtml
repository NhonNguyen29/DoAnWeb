
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">Đăng ký tài khoản</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table>
        <tr style="height:40px">
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTen")</td>
            @ViewData["Loi_1"]
        </tr>
        <tr style="height:40px">
            <td>Tên Tài Khoản:</td>
            <td>@Html.TextBox("Taikhoan")</td>
            @ViewData["Loi_2"]
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>@Html.TextBox("Matkhau")</td>
            @ViewData["Loi_3"]
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu:</td>
            <td>@Html.TextBox("Nhaplaimatkhau")</td>
            @ViewData["Loi_4"]
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>@Html.TextBox("Dienthoai")</td>
            @ViewData["Loi_5"]
        </tr>
        <tr style="height:40px">
            <td>Email</td>
            <td>@Html.TextBox("Email")</td>
            @ViewData["Loi_6"]
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>@Html.TextBox("Diachi")</td>
            @ViewData["Loi_7"]
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td><input type="date" name="Ngaysinh" /></td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" name="Dangky" /></td>
        </tr>
    </table>
}


