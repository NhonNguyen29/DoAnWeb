@model Webphukien.Models.LOAIPHUKIEN

@{
    ViewBag.Title = "XoaLPK";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa loại phụ kiện</h2>

<h3>Bạn có chắc muốn xóa loại phụ kiện này chứ?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại phụ kiện
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhuKien)
        </dd>

        <dt>
            Tên hãng điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HANGDIENTHOAI.TenHDT)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
              @Html.ActionLink("Trở về", "QLPK")
        </div>
    }
</div>
