@model Webphukien.Models.HANGDIENTHOAI

@{
    ViewBag.Title = "SuaHDT";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa hãng điện thoại</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaHDT)
    <div class="form-group">
        @Html.LabelFor(model => model.MaHDT, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div style="font:26px; padding: 5px 0 0 5px"> @Model.MaHDT </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TenHDT, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenHDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHDT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sửa" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trờ về", "QLHDT")
</div>
