@model Webphukien.Models.SANPHAM

@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi Tiết Sản Phẩm</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
           Giá bán:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Giaban)VNĐ  
        </dd>

        <dt>
           Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
           Ảnh bìa:
        </dt>

        <dd>
           <img src="@Url.Content("~/images/"+ Model.Anhbia)" width="120px" />
        </dd>

        <dt>
          Ngày cập nhật:
        </dt>

        <dd>
           @String.Format("{0:dd/MM/yyyy}",Model.Ngaycapnhat)
        </dd>

        <dt>
          Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
           Thương hiêuk:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.THUONGHIEU.TenTH)
        </dd>

        <dt>
            Tên phụ kiện:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAIPHUKIEN.TenPhuKien)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Sua", new { id = Model.MaSP }) |
    @Html.ActionLink("TRỞ VỀ", "Sanpham")
</p>
