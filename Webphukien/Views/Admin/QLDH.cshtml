@model IEnumerable<Webphukien.Models.DONDATHANG>

@{
    ViewBag.Title = "QLDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý đơn hàng</h2>


<table class="table">
    <tr>
        <th>
            Đã thanh toán
        </th>
        <th>
           Tình trạng thanh toán
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            Tên khách hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dathanhtoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tinhtranggiaohang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaydat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaygiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KHACHHANG.HoTen)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "ChitietDH", new { id=item.MaDonHang }) |
            @Html.ActionLink("Xóa", "XoaDH", new { id=item.MaDonHang })
        </td>
    </tr>
}

</table>
